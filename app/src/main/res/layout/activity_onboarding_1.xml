<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff8c42"
    tools:context=".OnboardingActivity1">

    <!-- Skip Button -->
    <TextView
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp" />

    <!-- Main Image Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imageContainer"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="140dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="#DB6F27"
        app:layout_constraintTop_toBottomOf="@+id/skipButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/onboardingImage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/onboarding_image_1"
            android:contentDescription="@string/onboarding_image_1_desc"
            android:layout_margin="20dp" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Decorative Elements -->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_heart"
        app:tint="@android:color/white"
        android:alpha="0.3"
        app:layout_constraintTop_toTopOf="@+id/imageContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_paw"
        app:tint="@android:color/white"
        android:alpha="0.3"
        app:layout_constraintTop_toTopOf="@+id/imageContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_heart"
        app:tint="@android:color/white"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="@+id/imageContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="40dp" />

    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_paw"
        app:tint="@android:color/white"
        android:alpha="0.25"
        app:layout_constraintBottom_toBottomOf="@+id/imageContainer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp" />

    <!-- Content Section -->
    <LinearLayout
        android:id="@+id/contentSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/imageContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Care for Your\nBeloved Pets"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keep track of feeding schedules, medical appointments, and daily activities for all your furry friends in one place."
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:alpha="0.9"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="40dp" />

    </LinearLayout>

    <!-- CTA Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/getStartedButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="NEXT"
        android:textColor="#FF7A42"
        android:textSize="16sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:backgroundTint="@android:color/white"
        app:cornerRadius="30dp"
        app:elevation="8dp"
        app:strokeWidth="0dp"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintWidth_max="280dp"
        app:layout_constraintTop_toBottomOf="@+id/contentSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="20dp" />

    <!-- Page Indicators -->

</androidx.constraintlayout.widget.ConstraintLayout>