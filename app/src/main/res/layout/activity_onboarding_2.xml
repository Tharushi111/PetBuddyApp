<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF8C42"
    tools:context=".OnboardingActivity2">

    <!-- Skip Button -->
    <TextView
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp" />

    <!-- Main Image Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imageContainer"
        android:layout_width="310dp"
        android:layout_height="300dp"
        android:layout_marginTop="80dp"
        app:cardBackgroundColor="#DB6F27"
        app:cardCornerRadius="24dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skipButton">

        <ImageView
            android:id="@+id/onboardingImage2"
            android:layout_width="303dp"
            android:layout_height="250dp"
            android:layout_margin="16dp"
            android:contentDescription="@string/onboarding_image_2_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/onboarding_image_2" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Feature Icons Around Image -->

    <!-- Decorative Paw Prints -->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_paw"
        app:tint="@android:color/white"
        android:alpha="0.2"
        app:layout_constraintTop_toTopOf="@+id/imageContainer"
        app:layout_constraintStart_toEndOf="@+id/imageContainer"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_paw"
        app:tint="@android:color/white"
        android:alpha="0.25"
        app:layout_constraintBottom_toBottomOf="@+id/imageContainer"
        app:layout_constraintEnd_toStartOf="@+id/imageContainer"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp" />

    <!-- Content Section -->
    <LinearLayout
        android:id="@+id/contentSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/imageContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Reminders\n&amp; Tracking"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Never miss feeding time or medicine schedules. Get intelligent reminders and track your pet's health journey."
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:alpha="0.9"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="40dp" />

    </LinearLayout>

    <!-- CTA Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/startNowButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="GET STARTED"
        android:textColor="#FF7A42"
        android:textSize="16sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:backgroundTint="@android:color/white"
        app:cornerRadius="30dp"
        app:elevation="8dp"
        app:strokeColor="@android:color/white"
        app:strokeWidth="3dp"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintWidth_max="280dp"
        app:layout_constraintTop_toBottomOf="@+id/contentSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="20dp" />

    <!-- Page Indicators -->
    <LinearLayout
        android:id="@+id/pageIndicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp">

        <View
            android:id="@+id/indicator1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/indicator_inactive"
            android:layout_marginEnd="8dp" />

        <View
            android:id="@+id/indicator2"
            android:layout_width="30dp"
            android:layout_height="8dp"
            android:background="@drawable/indicator_active"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>