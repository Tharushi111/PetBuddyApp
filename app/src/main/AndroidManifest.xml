<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petbuddy">

    <application
        android:allowBackup="true"
        android:icon="@drawable/petbuddy_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/petbuddy_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Launch Screen Activity -->
        <activity
            android:name=".LaunchActivity"
            android:exported="true"
            android:theme="@style/Theme.PetBuddy.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Onboarding Activities -->
        <activity
            android:name=".OnboardingActivity1"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />

        <activity
            android:name=".OnboardingActivity2"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />

        <!-- Signup Activity -->
        <activity
            android:name=".SignupActivity"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />

        <!-- Forgot Password Activity -->
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />

        <!-- Home Activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />

        <!-- Add Pet Activity -->
        <activity
            android:name=".AddPetActivity"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />

        <!-- Feeding Activity -->
        <activity
            android:name=".FeedingActivity"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />

        <!-- Walking Activity -->
        <activity
            android:name=".WalkingActivity"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />

        <!-- Medicine Activity -->
        <activity
            android:name=".MedicineActivity"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />

        <!-- VetCare Activity -->
        <activity
            android:name=".VetCareActivity"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait" />

    </application>

</manifest>
